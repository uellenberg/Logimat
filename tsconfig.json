{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".idea", ".env"]
}